<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingStart="@dimen/feed_item_padding_side"
    android:paddingTop="@dimen/feed_item_padding_top"
    android:paddingEnd="@dimen/feed_item_padding_side"
    android:paddingBottom="@dimen/feed_item_padding_bottom">

    <ImageView
        android:id="@+id/avatar_img"
        android:layout_width="@dimen/feed_item_avatar_width"
        android:layout_height="@dimen/feed_item_avatar_width" />

    <TextView
        android:id="@+id/author_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/avatar_img"
        android:layout_alignParentEnd="true"
        android:textColor="@color/text_author"
        android:layout_alignTop="@id/avatar_img"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_toEndOf="@id/avatar_img"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="Name Surname"/>

    <TextView
        android:id="@+id/post_txt"
        android:layout_width="match_parent"
        android:layout_below="@+id/avatar_img"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@color/black"
        android:textSize="@dimen/post_text_size"
        android:layout_height="wrap_content"
        tools:text="POST TEXT" />


</RelativeLayout>